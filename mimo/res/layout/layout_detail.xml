<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <!-- Title Area on top -->
    <LinearLayout
    android:id="@+id/layout_form"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    android:background="#ababab">
        <ImageButton android:src="@drawable/alien" android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="visible" android:background="@null" android:paddingBottom="20dp" android:paddingLeft="5dp" android:paddingTop="20dp" android:paddingRight="15dp" android:id="@+id/iconActivity"></ImageButton>
        <TextView  
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:text="@string/title_create"
                android:textColor="#000000" android:textSize="15dp" android:textStyle="bold"/>
    </LinearLayout>

    <!-- Form entry on top -->

        <ScrollView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:clipChildren="true"
            android:fadeScrollbars="true">
            <LinearLayout 
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
            >
		        <TextView  
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:layout_gravity="center_horizontal"
		            android:layout_marginLeft="8dip"
		            android:layout_marginRight="8dip"
		            android:text="@string/label_field_activity_name"
		            />
		        <EditText
		            android:id="@+id/edit_field_one"
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:singleLine="true"
		            android:layout_marginLeft="10dip"
		            android:layout_marginRight="10dip"
		            android:hint="@string/hint_field_activity_name"
		            />
		        <TextView  
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:layout_gravity="center_horizontal"
		            android:layout_marginLeft="8dip"
		            android:layout_marginRight="8dip"
		            android:text="@string/label_field_description"
		            />
		        <EditText
		            android:id="@+id/edit_field_two"
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:singleLine="true"
		            android:layout_marginLeft="10dip"
		            android:layout_marginRight="10dip"
		            android:hint="@string/hint_field_description"
	            />
		        <TextView android:text="Start :" android:layout_marginLeft="8dip" android:layout_marginRight="8dip" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent"></TextView>
	            <LinearLayout android:layout_height="0dp" android:layout_width="fill_parent" android:layout_weight="1">
	                <EditText android:hint="@string/hint_field_startdate" android:layout_marginLeft="10dip" android:layout_weight="1" android:singleLine="false" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginRight="2dip" android:id="@+id/tStarDate">
	                    <requestFocus></requestFocus>
	                </EditText>
	                <Button android:layout_weight="1" android:text="..." android:layout_gravity="right" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/bStartDatePicker"></Button>
	                <EditText android:layout_weight="1" android:layout_height="wrap_content" android:singleLine="false" android:layout_width="wrap_content" android:hint="@string/hint_field_starttime" android:layout_marginLeft="5dip" android:layout_marginRight="2dp" android:id="@+id/tStartTime"></EditText>
	                <Button android:layout_weight="1" android:layout_gravity="right" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="..." android:id="@+id/bStartTimePicker"></Button>
	            </LinearLayout>
	            <TextView android:text="End :" android:layout_marginLeft="8dip" android:layout_marginRight="8dip" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent"></TextView>
	            <LinearLayout android:layout_height="0dp" android:layout_width="fill_parent" android:layout_weight="1">
	                <EditText android:layout_marginLeft="10dip" android:layout_weight="1" android:singleLine="false" android:layout_height="wrap_content" android:layout_width="wrap_content" android:hint="@string/hint_field_enddate" android:layout_marginRight="2dip" android:id="@+id/tEndDate"></EditText>
	                <Button android:layout_weight="1" android:text="..." android:layout_gravity="right" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/bEndDatePicker"></Button>
	                <EditText android:layout_weight="1" android:singleLine="false" android:layout_height="wrap_content" android:layout_width="wrap_content" android:hint="@string/hint_field_endtime" android:layout_marginLeft="5dip" android:layout_marginRight="2dip" android:id="@+id/tEndTime"></EditText>
	                <Button android:layout_weight="1" android:text="..." android:layout_gravity="right" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/bEndTimePicker"></Button>
	            </LinearLayout>
	            <TextView android:layout_marginLeft="8dip" android:layout_marginRight="8dip" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/location"></TextView>
	            <LinearLayout android:layout_height="0dp" android:layout_width="fill_parent" android:layout_weight="1">
	                <Button android:layout_width="wrap_content" android:text="..." android:layout_height="wrap_content" android:layout_gravity="right" android:layout_weight="1" android:layout_marginLeft="10dp" android:id="@+id/bMapPicker"></Button>
	                <EditText android:id="@+id/EditText04" android:layout_marginLeft="10dip" android:layout_weight="1" android:singleLine="false" android:layout_height="wrap_content" android:layout_width="wrap_content" android:hint="@string/hint_field_lat" android:layout_marginRight="5dip"></EditText>
	                <EditText android:id="@+id/EditText05" android:layout_weight="1" android:singleLine="false" android:layout_height="wrap_content" android:layout_width="wrap_content" android:hint="@string/hint_field_lng" android:layout_marginRight="10dip"></EditText>
	            </LinearLayout>
                
                    <LinearLayout
				        android:orientation="horizontal"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_gravity="left"
				        android:layout_weight="2" android:layout_margin="5dip">
				        <Button
				            android:id="@+id/btn_submit"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="right"
				            android:layout_weight="1"
				            android:text="@string/button_submit"
				        />
				        <Button
				            android:id="@+id/btn_cancel"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="right"
				            android:layout_weight="1"
				            android:text="@string/button_cancel"
				        />
				    </LinearLayout>


            <!-- Repeat label-text and edit-text until done ... -->

            </LinearLayout>
        </ScrollView>


    <!-- "spring" between form and wizard buttons. -->

        </LinearLayout>


</LinearLayout>
