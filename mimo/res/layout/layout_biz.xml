<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent">
    <LinearLayout android:layout_width="fill_parent" 
       android:background="@drawable/nav" 
       android:layout_height="wrap_content" 
       android:orientation="horizontal">
       <ImageButton android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:src="@drawable/title_home_default" 
          android:background="@null"
          android:id="@+id/home_button">
      </ImageButton>
      <ImageView android:id="@+id/image_separator" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:src="@drawable/separator">
      </ImageView>
      
      <TextView android:id="@+id/label_title" 
          android:layout_weight="1"
          android:gravity="center|center_vertical" 
          android:text="@string/label_title_biz_list"
          android:textStyle="bold" 
          android:layout_width="wrap_content" 
          android:layout_height="fill_parent">
      </TextView>
      <ImageView android:id="@+id/image_separator" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:src="@drawable/separator">
      </ImageView>
      <ImageButton 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:src="@drawable/search_default" 
          android:background="@null"
          android:id="@+id/home_button">
      </ImageButton>
    </LinearLayout>
    <ImageButton android:background="@drawable/sidebar" 
      android:layout_height="wrap_content" 
      android:layout_width="fill_parent">
    </ImageButton>
    
   <ListView
      android:id="@+id/android:list"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"/>
</LinearLayout>